pipeline {

    agent any 

    tools {nodejs "Node-14.17.2"}

    stages {

        stage("Backend Tests") {
            when {
                expression {
                    BRANCH_NAME == 'develop' || BRANCH_NAME == 'master' || BRANCH_NAME == 'feature/infrastructure'
                }
            }
            steps {
                echo 'Running Backend Tests'
                dir ('back') {
                    nodejs('Node-14.17.2') {
                        sh 'npm install'
                        sh 'npm run unittest'
                    }
                }
            }
        }

        stage("Frontend Tests") {
            steps {
                echo 'Running Frontend Tests'
                dir ('front')
                echo 'Nothing to do actually....'
            }
        }

        stage("Build Backend Image") {
            steps {
                echo 'Building Backend Dockerfile'
            }
        }

        stage("Build Frontend Image") {
            steps {
                echo 'Building Frontend Dockerfile'
            }
        }

        stage("Build player Image") {
            steps {
                echo 'Building Player Dockerfile'
            }
        }

        stage("Deployment") {
            steps {
                echo 'Deploy all images to Docker Registry'
            }
        }

        stage("Clean-up") {
            steps {
                echo 'Clean all environments...'
            }
        }
    }
}