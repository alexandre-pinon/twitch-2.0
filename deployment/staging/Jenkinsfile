pipeline {

    agent any 
    // agent {
    //     docker {
    //         image 'myusername/mongonode:latest'
    //         args '-p 3000:3000'
    //     }
    // }

    tools {nodejs "Node-14.17.2"}

    stages {

        stage("Backend Tests") {
            when {
                expression {
                    BRANCH_NAME == 'develop' || BRANCH_NAME == 'master' || BRANCH_NAME == 'feature/jenkins'
                }
            }
            environment {
                BACK_ENV_FILE = credentials('BACK_ENV_FILE')	
            }
            steps {
                echo 'Running Backend Tests'
                dir ('back') {
                    nodejs('Node-14.17.2') {
                        sh 'npm install'
                        sh 'npm run unittest'
                    }
                }
            }
        }

        stage("Build Backend Image") {
            steps {
                echo 'Building Backend Dockerfile'
                dir ('back') {
                    echo 'Nothing to do actually....'
                }
            }
        }

        stage("Build Frontend Image") {
            steps {
                echo 'Building Frontend Dockerfile'
                dir ('back') {
                    echo 'Nothing to do actually....'
                }
            }
        }

        stage("Build player Image") {
            steps {
                echo 'Building Player Dockerfile'
                dir ('back') {
                    echo 'Nothing to do actually....'
                }
            }
        }

        stage("Deployment") {
            steps {
                echo 'Deploy all images to Docker Registry'
                dir ('back') {
                    echo 'Nothing to do actually....'
                }
            }
        }

        // stage("Clean-up") {
        //     steps {
        //         echo 'Clean all environments...'
        //     }
        // }
    }
}

